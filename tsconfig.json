{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "resolveJsonModule": true,
        "target": "es5",
        "esModuleInterop": true,
        "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./custom_typings"]
    },
    "include": ["./src/"]
}
